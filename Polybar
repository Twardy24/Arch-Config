[bar/mybar]

width = 100%
height = 25

background = #2b3a3f
radius = 4.0
border-size = 3
border-color = #000000000

locale = en_US.UTF-8

padding-right = 3
padding-left = 3
module-margin-left = 2
module-margin-right = 2

font-0 = SFNS Display:style=Regular:size=8;3
font-1 = MaterialIcons:size=8;3
font-2 = Termsynu:size=8;3
font-3 = FontAwesome:size=8;2
font-4 = DejaVuSans:size=8;1

modules-left = i3 
modules-center = date
modules-right = pulseaudio backlight battery wifi powermenu 

[module/powermenu]
type = custom/menu

label-open = "Power"
label-open-font = 4
label-close = "Back"
label-close-foreground = ${colors.lime}
label-separator = " / "
label-separator-foreground = ${colors.xcolor1}

; reboot
menu-0-1 = "Reboot"
menu-0-1-exec = systemctl reboot
menu-0-1-foreground = ${colors.salmon}
; shutdown
menu-0-0 = "Shut down"
menu-0-0-exec = systemctl poweroff
menu-0-0-foreground = ${colors.salmon}

[module/wifi]
type=internal/network
interface=wlp3s0
interval = 3.0
ping-interval = 10

format-connected = <label-connected>
label-connected = Wifi: %essid%
label-disconnected = Wifi: Not Connected

[module/date]
type = internal/date
interval = 1.0
date = %H:%M:%S

[module/i3]
type = internal/i3
pin-workspaces = true

[module/battery]
type = internal/battery
full-at = 98
time-format = %H:%M

label-charging = Charging: %percentage%% 
;(%time%)
label-discharging = Battery: %percentage%%
label-full = Battery: full

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <label-volume>
label-volume = Volume: %percentage%%
label-muted = Volume: Muted

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label = Brightness: %percentage%%
