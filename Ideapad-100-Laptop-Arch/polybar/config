foreground = #dfdfdf
foreground-alt = #dfdfdf
primary = #9f00a3

[bar/example]
width = 100%
height = 19
radius = 0.0
fixed-center = true

# dpi-x=102
# dpi-y=96

background = ${colors.background}
foreground = ${colors.foreground}

