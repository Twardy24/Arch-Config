###########################################################
########################Modules############################
###########################################################

[module/separator]
type = custom/text
content = " "

[module/xwindow]
type = internal/xwindow

label = %title%
label-padding = 1
label-underline = ${colors.primary}

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

 
ws-icon-0 = 1;%{T3}%{T-}
ws-icon-1 = 2;%{T4}%{T-}
ws-icon-2 = 3;%{T4}%{T-}
ws-icon-3 = 4;%{T3}%{T-}
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8 
ws-icon-8 = 9;9 
ws-icon-9 = 10;10

# label mode
label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

# label focused = active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

# label unfocused = inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background-alt}
label-unfocused-underline = #620065

# label visible = active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

# label urgent = workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-separator = |
label-separator-background = ${colors.background-alt}

###########################################################

[module/xbacklight]
type = internal/xbacklight

label = "  %percentage%%"
format = <label>
# format-padding = 1

format-background = #9f00a3
format-foreground = ${colors.foreground-alt}

###########################################################

[module/cpu]
type = internal/cpu

interval = 2
label = %percentage:2%%

# format-padding = 1
format-prefix = "  "

format-background = #89018d
format-foreground = ${colors.foreground-alt}

###########################################################

[module/memory]
type = internal/memory

interval = 2
label = %percentage_used%%

# format-padding = 1
format-prefix = "  "

format-background = #750078
format-foreground = ${colors.foreground-alt}

###########################################################

[module/wlan]
type = internal/network

interface = wlp3s0
interval = 3.0

# format-connected-padding = 1
format-connected = <ramp-signal> <label-connected>

format-disconnected = "%{T3} %{T-} disconnected"
format-connected-background = #3c003d
format-connected-foreground = ${colors.foreground-alt}

label-connected = %local_ip%
ramp-signal-0 = "%{T3} %{T-}"
ramp-signal-1 = "%{T3} %{T-}"
ramp-signal-2 = "%{T3} %{T-}"
ramp-signal-3 = "%{T3} %{T-}"
ramp-signal-4 = "%{T3} %{T-}"

###########################################################

[module/date]
type = internal/date
interval = 1

format-background = #260027
format-foreground = ${colors.foreground-alt}
# format-padding = 1

label = "%{T3} %{T-}%date% %time%"
time = %H:%M
time-alt = %H:%M:%S
date-alt = " %d.%m.%Y"

###########################################################

[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = true
interval = 5

format-volume = <ramp-volume> <label-volume>
# format-volume-padding = 1
# format-muted-padding = 1

format-volume-background = #b600ba
format-muted-background = #b600ba

format-volume-foreground = ${colors.foreground-alt}
format-muted-foreground = ${colors.foreground-alt}

label-volume = %percentage%%
label-muted = " "

ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "

###########################################################
 
[module/battery]
type = internal/battery

label-charging = "  %percentage%%"
label-discharging = %percentage%%
label-full = "  %percentage%%"

# format-charging-padding = 1
# format-discharging-padding = 1
# format-full-padding = 1

format-charging-background = #510053
format-discharging-background = #510053
format-full-background = #510053

format-charging-foreground = ${colors.foreground-alt}
format-discharging-foreground = ${colors.foreground-alt}
format-full-foreground = ${colors.foreground-alt}

format-charging = <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <label-full>

ramp-capacity-0 = "%{T4} %{T-}"
ramp-capacity-1 = "%{T4} %{T-}" 
ramp-capacity-2 = "%{T4} %{T-}"   
ramp-capacity-3 = "%{T4} %{T-}" 
ramp-capacity-4 = "%{T4} %{T-}" 

###########################################################

[module/temperature]
type = internal/temperature

thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

# format-padding = 1
# format-spacing = 0
format-background = #620065
format-foreground = ${colors.foreground-alt}

label = "%temperature-c%"
label-warn = "%temperature-c%"

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "

###########################################################

